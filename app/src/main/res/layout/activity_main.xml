<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">



    <TextView
        android:id="@+id/conversionTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Conversion Type"
        android:textSize="16sp"
        android:textStyle="bold"

        android:layout_marginTop="32dp"/>

    <Spinner
        android:id="@+id/conversionTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conversionTypeLabel"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/valueLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value to Convert"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/conversionTypeSpinner"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/valueInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/valueLabel"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        android:hint="Enter Value"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/sourceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Source Unit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/valueInput"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/sourceUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sourceLabel"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/targetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Unit"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/sourceUnitSpinner"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <Spinner
        android:id="@+id/targetUnitSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetLabel"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/convertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/targetUnitSpinner"
        android:layout_marginTop="16dp"
        android:text="Convert"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/convertButton"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/resultLabel"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
